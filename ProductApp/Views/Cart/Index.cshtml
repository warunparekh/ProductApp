@model List<ProductApp.Models.ViewModels.CartItemViewModel>

@{
    ViewData["Title"] = "Your Shopping Cart";
    // Calculate grand total from live product prices
    var grandTotal = Model.Sum(item => item.Product != null ? (item.Cart.ProductQuantity * item.Product.ProductPrice) : 0);
}

<h1>@ViewData["Title"]</h1>

@if (!Model.Any())
{
    <div class="alert alert-info mt-4">Your cart is empty. <a asp-controller="Product" asp-action="Index" class="alert-link">Continue shopping</a>.</div>
}
else
{
    <form asp-action="UpdateCart" method="post">
        @Html.AntiForgeryToken()
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th style="width: 10%;">Image</th>
                        <th style="width: 35%;">Name</th>
                        <th style="width: 15%;">Quantity</th>
                        <th style="width: 15%;">Unit Price</th>
                        <th style="width: 15%;">Total</th>
                        <th style="width: 10%;"></th>
                    </tr>
                </thead>
                <tbody>
                    @for (var i = 0; i < Model.Count; i++)
                    {
                        var product = Model[i].Product;
                        if (product != null)
                        {
                            <tr>
                                <td>
                                    <input type="hidden" name="items[@i].ProductId" value="@Model[i].Cart.ProductId" />
                                    @if (!string.IsNullOrEmpty(product.ProductImage))
                                    {
                                        <img src="@product.ProductImage" alt="@product.ProductName" class="img-fluid rounded" style="width:60px; height:60px; object-fit:cover;" />
                                    }
                                </td>
                                <td>@product.ProductName</td>
                                <td>
                                    <input type="number" name="items[@i].Quantity" value="@Model[i].Cart.ProductQuantity" class="form-control form-control-sm" style="width: 80px;" min="0" />
                                </td>
                                <td>@product.ProductPrice.ToString("C")</td>
                                <td>@((Model[i].Cart.ProductQuantity * product.ProductPrice).ToString("C"))</td>
                                <td class="text-end">
                                    <a asp-action="RemoveFromCart" asp-route-productId="@Model[i].Cart.ProductId" class="btn btn-sm btn-danger" title="Remove Item">&times;</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        <div class="d-flex justify-content-between align-items-center mt-3">
            <div>
                <button type="submit" class="btn btn-primary">Update Cart</button>
                <a asp-action="ClearCart" asp-controller="Cart" class="btn btn-outline-danger" onclick="return confirm('Are you sure you want to clear your cart?');">Clear Cart</a>
            </div>
            
        </div>
        <div class="d-flex justify-content-between align-items-end mt-3">
            <h4 class="mb-2">Grand Total: <span class="text-primary">@grandTotal.ToString("C")</span></h4>
            <a asp-controller="Order" asp-action="Checkout" class="btn btn-success">Proceed to Checkout</a>
        </div>
    </form>
}