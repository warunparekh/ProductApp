@model ProductApp.Models.ProductWithCategoryName
@{
    ViewData["Title"] = Model.ProductName;
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index">Products</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Model.ProductName</li>
    </ol>
</nav>

<div class="row">
    <div class="col-md-6">
        @if (!string.IsNullOrEmpty(Model.ProductImage))
        {
            <img src="@Model.ProductImage" alt="@Model.ProductName" class="img-fluid rounded" style="width: 100%; max-height: 400px; object-fit: cover;" />
        }
        else
        {
            <div class="bg-light d-flex align-items-center justify-content-center rounded" style="height: 400px;">
                <div class="text-center">
                    <i class="fas fa-image fa-5x text-muted mb-3"></i>
                    <p class="text-muted">No image available</p>
                </div>
            </div>
        }
    </div>
    <div class="col-md-6">
        <h1>@Model.ProductName</h1>

        <div class="mb-3">
            <span class="badge bg-secondary">@Model.CategoryName</span>
        </div>

        <h3 class="text-primary mb-3">@Model.ProductPrice.ToString("C")</h3>

        <div class="mb-3">
            @if (Model.ProductStock > 0)
            {
                <span class="badge bg-success">✓ In Stock (@Model.ProductStock available)</span>
            }
            else
            {
                <span class="badge bg-danger">✗ Out of Stock</span>
            }
        </div>

        @if (!string.IsNullOrEmpty(Model.ProductDescription))
        {
            <div class="mb-4">
                <h5>Description</h5>
                <p class="text-muted">@Model.ProductDescription</p>
            </div>
        }

        <div class="d-grid gap-2 d-md-flex">
            @if (Model.ProductStock > 0)
            {
                <form asp-controller="Cart" asp-action="AddToCart" method="post" class="d-inline">
                    <input type="hidden" name="productId" value="@Model.ProductId" />
                    <input type="hidden" name="quantity" value="1" />
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="fas fa-cart-plus me-2"></i>Add To Cart
                    </button>
                </form>

                <form asp-controller="Order" asp-action="BuyNow" method="post" class="d-inline">
                    <input type="hidden" name="productId" value="@Model.ProductId" />
                    <input type="hidden" name="quantity" value="1" />
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="fas fa-bolt me-2"></i>Buy Now
                    </button>
                </form>
            }
            else
            {
                <button class="btn btn-secondary btn-lg" disabled>
                    <i class="fas fa-times me-2"></i>Out of Stock
                </button>
            }
        </div>

        <div class="mt-4">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to Products
            </a>
        </div>
    </div>
</div>