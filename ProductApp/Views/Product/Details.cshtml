@model ProductApp.Models.Product
@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            @if (!string.IsNullOrEmpty(Model.ProductImage))
            {
                <div class="card">
                    <img src="@Model.ProductImage" alt="@Model.ProductName"
                         class="card-img-top img-fluid"
                         style="max-height: 500px; object-fit: cover;" />
                </div>
            }
            else
            {
                <div class="card">
                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center"
                         style="height: 400px;">
                        <div class="text-center">
                            <i class="fas fa-image fa-5x text-muted mb-3"></i>
                            <p class="text-muted">No image available</p>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="col-md-6">
            <h1 class="mb-3">@Model.ProductName</h1>

            <div class="mb-3">
                <span class="badge bg-secondary">@Model.Category?.CategoryName</span>
            </div>

            <div class="mb-3">
                <h3 class="text-primary">@Model.ProductPrice.ToString("C")</h3>
            </div>

            <div class="mb-3">
                @if (Model.ProductStock > 0)
                {
                    <span class="badge bg-success">In Stock: @Model.ProductStock units</span>
                }
                else
                {
                    <span class="badge bg-danger">Out of Stock</span>
                }
            </div>

            @if (!string.IsNullOrEmpty(Model.ProductDescription))
            {
                <div class="mb-4">
                    <h5>Description</h5>
                    <p class="text-muted">@Model.ProductDescription</p>
                </div>
            }

            <div class="mb-3">
                @if (Model.ProductStock > 0)
                {
                    <button class="btn btn-success btn-lg me-2">
                        <i class="fas fa-cart-plus me-1"></i>Add to Cart
                    </button>
                    <button class="btn btn-outline-primary btn-lg">
                        <i class="fas fa-bolt me-1"></i>Buy Now
                    </button>
                }
                else
                {
                    <button class="btn btn-secondary btn-lg" disabled>
                        <i class="fas fa-times me-1"></i>Out of Stock
                    </button>
                }
            </div>

            <div class="mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Back to Products
                </a>
            </div>
        </div>
    </div>
</div>