@{
    ViewData["Title"] = "Admin Dashboard";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <h2>Manage Products</h2>
        <p>Add, edit, or remove products from your catalog.</p>
        <p><a class="btn btn-primary" asp-action="Products">Manage Products &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Manage Categories</h2>
        <p>Organize your products by managing categories.</p>
        <p><a class="btn btn-primary" asp-action="Categories">Manage Categories &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Manage Users</h2>
        <p>Administer user accounts and permissions.</p>
        <p><a class="btn btn-primary" asp-action="Users">Manage Users &raquo;</a></p>
    </div>
</div>