@model IEnumerable<ProductApp.Models.Product>
@{
    ViewData["Title"] = "Manage Products";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="CreateProduct" class="btn btn-primary">Create New Product</a>
    <a asp-action="Index" asp-controller="Admin" class="btn btn-secondary">Back to Dashboard</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th class="text-end">Price</th>
            <th class="text-end">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.ProductName</td>
                <td>@p.Category?.CategoryName</td>
                <td class="text-end">@p.ProductPrice:C</td>
                <td class="text-end">
                    <a asp-action="EditProduct" asp-route-id="@p.ProductId" class="btn btn-sm btn-warning">Edit</a>
                    <form asp-action="DeleteProduct" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@p.ProductId" />
                        <button type="submit" class="btn btn-sm btn-danger"
                                onclick="return confirm('Delete this product?');">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
