@model IEnumerable<ProductApp.ViewModels.UserViewModel>
@{
    ViewData["Title"] = "Manage Users";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Info"] != null)
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        @TempData["Info"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mt-4 mb-3">
    <h2>@ViewData["Title"]</h2>
    <div>
        <a asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
    </div>
</div>

<table class="table table-bordered table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>Email</th>
            <th>Address</th>
            <th>Roles</th>
            <th class="text-end">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr class="@(u.IsCurrentUser ? "table-info" : "")">
                <td>
                    @u.Email
                    @if (u.IsCurrentUser)
                    {
                        <span class="badge bg-primary ms-2">You</span>
                    }
                </td>
                <td>@(string.IsNullOrEmpty(u.UserAddress) ? "Not provided" : u.UserAddress)</td>
                <td>
                    @if (u.Roles.Any())
                    {
                        @foreach (var role in u.Roles)
                        {
                            <span class="badge @(role == "Admin" ? "bg-danger" : "bg-primary") me-1">
                                @if (role == "Admin")
                                {
                                    <i class="fas fa-crown me-1"></i>
                                }
                                @role
                            </span>
                        }
                    }
                    else
                    {
                        <span class="badge bg-secondary">No roles</span>
                    }
                </td>
                <td class="text-end">
                    @if (!u.IsCurrentUser)
                    {
                        @if (u.Roles.Contains("Admin"))
                        {
                            <form asp-action="RemoveFromAdmin" method="post" class="d-inline">
                                <input type="hidden" name="userId" value="@u.Id" />
                                <button type="submit" class="btn btn-sm btn-warning"
                                        onclick="return confirm('Remove @u.Email from Admin role?');">
                                    <i class="fas fa-user-minus me-1"></i>Remove Admin
                                </button>
                            </form>
                        }
                        else
                        {
                            <form asp-action="PromoteToAdmin" method="post" class="d-inline">
                                <input type="hidden" name="userId" value="@u.Id" />
                                <button type="submit" class="btn btn-sm btn-success"
                                        onclick="return confirm('Promote @u.Email to Admin?');">
                                    <i class="fas fa-user-plus me-1"></i>Make Admin
                                </button>
                            </form>
                        }
                    }
                    else
                    {
                        <span class="text-muted">Cannot modify own role</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>