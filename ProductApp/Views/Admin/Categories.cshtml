@model IEnumerable<ProductApp.Models.Category>
@{
    ViewData["Title"] = "Manage Categories";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="CreateCategory" class="btn btn-primary">New Category</a>
    <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">
        Dashboard
    </a>
</p>

<table class="table table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th class="text-end">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.CategoryId</td>
                <td>@c.CategoryName</td>
                <td class="text-end">
                    <a asp-action="EditCategory" asp-route-id="@c.CategoryId"
                       class="btn btn-sm btn-warning">Edit</a>
                    <form asp-action="DeleteCategory" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@c.CategoryId" />
                        <button type="submit" class="btn btn-sm btn-danger"
                                onclick="return confirm('Delete?');">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
