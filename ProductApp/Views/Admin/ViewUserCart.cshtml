@model IEnumerable<ProductApp.Models.ViewModels.CartItemViewModel>

@{
    ViewData["Title"] = "Cart for " + ViewBag.UserEmail;
}

<h1>@ViewData["Title"]</h1>

<table class="table table-bordered mt-4">
    <thead class="table-light">
        <tr>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Unit Price</th>
            <th>Total Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Product?.ProductName</td>
                <td>@item.Cart.ProductQuantity</td>
                <td>@item.Cart.ProductNetprice.ToString("C")</td>
                <td>@item.Cart.CartTotalPrice.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="ActiveCarts" class="btn btn-secondary">Back to Active Carts</a>
</div>