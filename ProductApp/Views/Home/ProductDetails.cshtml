@model ProductApp.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            @if (!string.IsNullOrEmpty(Model.ProductImage))
            {
                <img src="@Model.ProductImage" class="img-fluid" alt="@Model.ProductName">
            }
            else
            {
                <div class="bg-light d-flex align-items-center justify-content-center" style="height: 400px;">
                    <i class="fas fa-image fa-5x text-muted"></i>
                </div>
            }
        </div>
        <div class="col-md-6">
            <h1>@Model.ProductName</h1>
            <p class="lead">@Model.ProductDescription</p>
            
            <div class="mb-3">
                <h3 class="text-primary">$@Model.ProductPrice</h3>
            </div>
            
            <div class="mb-3">
                <span class="badge bg-info">Stock: @Model.ProductStock</span>
            </div>
            
            @if (Model.ProductStock > 0)
            {
                <button class="btn btn-success btn-lg me-2">Add to Cart</button>
                <button class="btn btn-outline-primary btn-lg">Buy Now</button>
            }
            else
            {
                <button class="btn btn-secondary btn-lg" disabled>Out of Stock</button>
            }
            
            <div class="mt-3">
                <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">Back to Products</a>
            </div>
        </div>
    </div>
</div>